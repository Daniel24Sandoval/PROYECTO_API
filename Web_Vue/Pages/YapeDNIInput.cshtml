@page
@model Web_Vue.Pages.YapeDNIInputModel
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buscar recibos de</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .header {
            background-color: #6a1b9a;
            color: white;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .content {
            padding: 20px;
        }

        .service-logo {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .logo-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }

        .input-container {
            margin-bottom: 20px;
        }

        .input-label {
            color: #6a1b9a;
            margin-bottom: 5px;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            border: 2px solid #6a1b9a;
            border-radius: 5px;
        }

        .continue-button {
            background-color: #00bfa5;
            color: white;
            border: none;
            padding: 15px;
            width: 100%;
            border-radius: 5px;
            font-size: 16px;
        }

        .footer {
            background-color: #6a1b9a;
            height: 5px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="app">
        <div class="header">
            <span>←</span>
            <span>Buscar recibos de</span>
            <span>✕</span>
        </div>
        <div class="content">
            <div class="service-logo">
                <div class="logo-circle">
                    <span style="color: red;">{{ nombreEmpresa }}</span>
                </div>
                <div>
                    <div>{{ nombreEmpresa }}</div>
                    <div style="color: #888;">Pago con nro DNI</div>
                </div>
            </div>
            <div class="input-container">
                <div class="input-label">Ingresar Nro de Dni</div>
                <input type="text" class="input-field" v-model="dni">
            </div>
            <button class="continue-button" v-on:click="continuar">CONTINUAR</button>
        </div>
        <div class="footer"></div>
    </div>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@2.6/dist/vue.js"></script>
<script>
    new Vue({
        el: '#app',
        data: {
            nombreUsuario: '',
            userId: '',
            idEmpresa: '',
            nombreEmpresa: '',
            dni: ''
        },
        created() {
            this.cargarDatos();
        },
        methods: {
            cargarDatos() {
                this.nombreUsuario = sessionStorage.getItem('nombreUsuario');
                this.userId = sessionStorage.getItem('userId');
                this.idEmpresa = sessionStorage.getItem('idEmpresa');
                this.nombreEmpresa = sessionStorage.getItem('nombreEmpresa');
                const token = sessionStorage.getItem('userSessionToken');

                if (!this.nombreUsuario || !this.userId || !this.idEmpresa || !this.nombreEmpresa) {
                    window.location.href = '/login';
                }
            },
            continuar() {
                sessionStorage.setItem('dni', this.dni);
                window.location.href = '/ServicesRecibos';
            }
        }
    });
</script>