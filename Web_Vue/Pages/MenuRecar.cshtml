@page
@model Web_Vue.Pages.MenuRecarModel
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recarga y Crédito</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .app-container {
            max-width: 375px;
            margin: 20px auto;
            background-color: #8e44ad;
            border-radius: 30px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .status-bar {
            display: flex;
            justify-content: space-between;
            padding: 10px 20px;
            color: white;
            font-size: 14px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            color: white;
        }

        .back-button, .close-button {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
        }

        .content {
            background-color: white;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
            padding: 20px;
            min-height: 500px;
        }

        h1 {
            margin: 0;
            font-size: 24px;
        }

        .card {
            background-color: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .card-icon {
            width: 40px;
            height: 40px;
            background-color: #f0f0f0;
            border-radius: 50%;
            margin-right: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-content {
            flex-grow: 1;
        }

        .card-title {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .card-subtitle {
            color: #666;
            font-size: 14px;
        }

        .promo-banner {
            background-color: #ffd700;
            border-radius: 10px;
            padding: 10px 15px;
            margin-bottom: 20px;
        }

        .section-title {
            color: #8e44ad;
            margin-top: 30px;
        }

        .contact-icon {
            width: 60px;
            height: 60px;
            background-color: #f0f0f0;
            border-radius: 50%;
            margin: 0 auto 20px;
        }

        .amount-input {
            font-size: 48px;
            color: #8e44ad;
            text-align: center;
            border: none;
            width: 100%;
            margin-bottom: 20px;
        }

        .amount-options {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .amount-option {
            background-color: #f0f0f0;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

        .action-button {
            background-color: #8e44ad;
            color: white;
            border: none;
            border-radius: 25px;
            padding: 15px;
            width: 100%;
            font-size: 18px;
            cursor: pointer;
            margin-top: 20px;
        }

        .credit-details {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .detail-label {
            color: #666;
        }

        .detail-value {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div id="app" class="app-container">
        <div class="status-bar">
            <span>•••</span>
        </div>
        <div class="header">
            <button class="back-button">←</button>
            <h1>Recargar celular</h1>
            <button class="close-button">×</button>
        </div>
        <div class="content">
            <div class="card">
                <div class="card-icon">📱</div>
                <div class="card-content">
                    <div class="card-title">Mi número</div>
                    <div class="card-subtitle">{{ telefono }}</div>
                </div>
            </div>
            <form method="get" action="/ListarCRecarga">
                <button type="submit" class="bottom-button">
                    <div class="card">
                        <div class="card-icon">👤</div>
                        <div class="card-content">
                            <div class="card-title">Otra persona</div>
                            <div class="card-subtitle">Contacto o nuevo</div>
                        </div>
                    </div>
                </button>
            </form>
            <div class="promo-banner">
                ¡Recarga y descubre si ganaste!
            </div>
        </div>
    </div>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/vue@2.6/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue-resource@1.5.3"></script>
<script>
    new Vue({
        el: '#app',
        data: {
            token: null,
            userId: null,
            nombreUsuario: null,
            telefono: null
        },
        created() {
            this.token = sessionStorage.getItem('userSessionToken');
            this.userId = sessionStorage.getItem('userId');
            this.nombreUsuario = sessionStorage.getItem('nombreUsuario');
            this.telefono = sessionStorage.getItem('Telefono');

            if (!this.token || !this.userId || !this.nombreUsuario || !this.telefono) {
                window.location.href = '/login';
            }
        },
        methods: {
            pasarDatos() {
                sessionStorage.setItem('userSessionToken', this.token);
                sessionStorage.setItem('userId', this.userId);
                sessionStorage.setItem('nombreUsuario', this.nombreUsuario);
                sessionStorage.setItem('Telefono', this.telefono);
                window.location.href = '/ListarCRecarga';
            }
        }
    });
</script>